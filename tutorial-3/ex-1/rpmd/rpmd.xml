<simulation>
   <output prefix='h2o-ice-rpmd'>
      <properties stride='100' filename='out'>  [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, pressure_cv{megapascal}] </properties>
      <checkpoint filename='restart' stride='4000' />
      <trajectory filename='xc' stride='400' format='xyz' cell_units='angstrom'> x_centroid{angstrom} </trajectory>
      <trajectory filename='vc' stride='4' cell_units='angstrom'> v_centroid </trajectory>
      <trajectory filename='for' stride='4000' format='xyz' cell_units='angstrom'> forces </trajectory>
      <trajectory stride="4000" filename="pos" cell_units="angstrom">positions{angstrom}</trajectory>
   </output>
   <total_steps>20000</total_steps>
   <prng><seed>32xxx45</seed></prng>
   <ffsocket mode='unix' name='lammps'>
       <latency>0.0001</latency>
       <slots>8</slots>
       <address>h2o-rpmd-xxx</address>
   </ffsocket>
   <system>
     <initialize nbeads='48'>
         <file mode='chk' > ../../checkpoint-pimd/h2o-ice-pimd.restart_xxx  </file>
         <velocities mode="thermal" units='kelvin'> 200 </velocities>
     </initialize>
     <forces>
         <force forcefield="lammps" /> 
     </forces>
     <motion mode='dynamics'>
        <dynamics mode='nve'>
           <timestep units='femtosecond'> 0.25 </timestep>
         </dynamics>
      </motion>
     <ensemble>
           <temperature units='kelvin'> 200 </temperature>
     </ensemble>
   </system>
</simulation>

